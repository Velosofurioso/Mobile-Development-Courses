<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="30dp"
            android:theme="@style/TextLabels"
            android:text="@string/app_s_choose" />

        <ImageView
            android:id="@+id/imgAppChoose"
            android:layout_below="@+id/txtLabel1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/padrao"
            android:contentDescription="@string/empty_image" />

        <TextView
            android:id="@+id/txtLabel2"
            android:layout_below="@+id/imgAppChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="30dp"
            android:theme="@style/TextLabels"
            android:text="@string/choose_an_option_below" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLabel2"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRock"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/rock"
                android:contentDescription="@string/rock_image"/>

            <ImageView
                android:id="@+id/imgPaper"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/paper"
                android:contentDescription="@string/paper_image"/>

            <ImageView
                android:id="@+id/imgScisor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/scissor"
                android:contentDescription="@string/scissor_image"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>